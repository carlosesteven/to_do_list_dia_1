<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor_autenticacion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".interfaz.activity.Autenticacion"
    android:padding="30dp"
    >

    <TextView
        android:id="@+id/sign_in_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="@string/btn_iniciar_sesion"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@+id/sign_in_titulo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginTop="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>