<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/style_item_normal"
    android:layout_margin="3dp"
    android:padding="10dp"

    android:id="@+id/itemContenedor"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/itemColor"
        android:layout_width="40dp"
        android:layout_height="50dp"

        app:cornerRadius="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/itemTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@+id/itemColor"
        app:layout_constraintBottom_toBottomOf="@+id/itemColor"
        app:layout_constraintLeft_toRightOf="@+id/itemColor"
        app:layout_constraintRight_toLeftOf="@+id/itemCompleto"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:maxLines="1"
        />

    <CheckBox
        android:id="@+id/itemCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:scaleX="1.3"
        android:scaleY="1.3"

        android:layout_marginEnd="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>